<% if signed_in? %>
	<h4>Add a Review</h4>
	<%= form_for([@episode, @episode.comments.build]) do |f| %>
		<p>
			<%= f.label :body, "Comments" %><br>
			<%= f.text_area :body %>
		</p>
		<!-- Raty plugin for rating -->
		<p><div class="rating"></div> </p>
		<!-- <p>
			<%= f.label :rating %><br>
			<%= f.text_field :rating, class: "rating" %><br>
		</p> -->
		<p>
			<%= f.submit "Submit" %>
		</p>
	<% end %>
<% end %>